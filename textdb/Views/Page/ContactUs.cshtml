
@{
    ViewBag.Title = "ContactUs";
}
@model Dictionary<int,string>
           
<link href="@Url.Content("~/Content/Contact.css")" rel="stylesheet" type="text/css" />


<h3>Your Details</h3>

@using (Html.BeginForm("SendEmail") )
{

    <div class="form-field">
	    <label>Name</label><input type="text" id="name" name="name" />
    </div>

    <div class="form-field">
	    <label>Email Address</label><input type="text" id="email" name="email" />
    </div>

    <br/>

    <h3>Your Enquiry</h3>

    <div class="form-field clearfix">
	    <label>Enquiry Relates to</label>
        @Html.DropDownList("contactId", new SelectList(Model, "Key", "Value", ViewBag.Selection))
    </div>

    <div class="form-field">
	    <label>Your Enquiry</label><textarea type="text" id="text" name="text"></textarea>
    </div>

    <div class="submit">
        <input type="submit" value="submit enquiry" />
    </div>
}